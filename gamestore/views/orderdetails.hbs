<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<div class = "top">
    <h1>Order Details</h1>
    <p>Browse Order Details:</p>
</div>
<fieldset>
{{!-- Create a table --}}
<table id="orderdetails-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.orderdetails_id}}>
            <td>{{this.orderdetails_id}}</td>
            <td>{{this.order_id}}</td>
            <td>{{this.product_id}}</td>
            <td><button onclick="deleteOrderDetails({{this.orderdetails_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_orderdetails.js"></script>
</fieldset>

<!-- /views/ordersdetails.hbs -->
<fieldset>
{{!-- Form to add a record to the table  --}}
<h2>Add Order Details Data</h2>
<form id="add-orderdetails-form-ajax">

    <label for="input-order_id">Order ID: </label>
    <select name="input-order_id" id="input-order_id">
        <option value="order">ID</option>
        {{#each orders}}
        <option value="{{this.order_id}}">{{this.order_id}}</option>
        {{/each}}
    </select>

    <label for="input-product_id">Product ID: </label>
    <select name="input-product_id" id="input-product_id">
    <option value="product">ID</option>
    {{#each products}}
    <option value="{{this.product_id}}">{{this.product_id}} ({{this.title}})</option>
    {{/each}}
    </select>


    <p><input type="submit"></p>
</form>
</fieldset>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_orderdetails.js"></script>