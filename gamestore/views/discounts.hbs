<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<div class = "top">
    <h1>Discounts</h1>
    <p>Browse Discount Information:</p>
</div>
<fieldset>
{{!-- Create a table --}}
<table id="discount-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>


        {{#each data}}
        <tr data-value={{this.discount_id}}>
            <td>{{this.discount_id}}</td>
            <td>{{this.discount_name}}</td>
            <td>{{this.percent}}</td>
            <td>{{this.duration}}</td>
            <td>{{this.active}}</td>
            <td><button onclick="deleteDiscount({{this.discount_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_discount.js"></script>
</fieldset>

<!-- /views/discounts.hbs -->
<fieldset>
{{!-- Form to add a record to the table  --}}
<h2>Add Discount Data</h2>
<form id="add-discount-form-ajax">
    <p><label for="input-discount_name"> Name:</label>
        <input type="text" id="input-discount_name" required placeholder ="Discount Name"/>
    </p>
    <p> <label for="input-percent"> Percent (decimal): </label>
        <input type="number" id="input-percent" step="0.01" value="0.00" max="1.00" min="0.0" required>
    </p> 
    <p><label for="input-duration"> Duration (days): </label>
        <input type="number" id="input-duration" step="1" value="0" max="30" min="0" required> 
    </p>
    <p><label for="input-active">Active: </label>
        <select name ="active" id="input-active" required>
            <option value=1>TRUE</option>
            <option value=0>FALSE</option>
        </select>
    </p>

    <p><input type="submit"></p>
</form>
</fieldset>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_discount.js"></script>